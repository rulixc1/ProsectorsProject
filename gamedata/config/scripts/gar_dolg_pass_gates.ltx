[logic]
active = ph_door@locked

[ph_door@locked]
locked = true
closed = true
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_info = {+gar_free_pass} ph_door@closed, {+sar2_death_18} ph_door@closed
show_tips = false
slider = true
tip_unlock = tip_gate_locked

[ph_door@closed]
locked = false
closed = true
on_use = ph_door@open
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
show_tips = true
slider = true
tip_open = tip_gate_open

[ph_door@open]
locked = false
closed = false
on_timer = 3000 | ph_door@closed
on_use = ph_door@closed
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
show_tips = true
slider = true
tip_close = tip_gate_close