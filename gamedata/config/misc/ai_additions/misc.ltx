;--------------------------------------
; Настройки разных модулей
;--------------------------------------

;--------------------------------------
; Модуль rx_addons
;--------------------------------------

[addons]
check_period = 180 ;350 ;90		;сек ; время между подходами
forbidden_factions = zombied,trader	; (community)
forbidden_npcs = none		; (name)
online_mode = true		; возможность работы в онлайне, иначе это будет происходить при переходе в офлайн

;надевание аддонов
addons = on			; включить
max_upg_weapons = 4		; максимальное количество пушек с аддонами

; апгрейды оружия
;upgrades = on			; включить
;up_chance_base = 30		; % ; шанс сделать апгрейд, минимальный
;up_chance_rank_factor = 0.4	; увеличение шанса с ростом ранга (1.0 -> +100% для мастера)
;up_price_k = 0.25		; коэффициент стоимости апгрейда для НПС

; продажа лишнего оружия
surplus_sales = on		; включить
no_sale_items = none		; список запрещённых к продаже предметов


;--------------------------------------
; Настройки модуля rx_ff
;--------------------------------------

[ff]
forbidden_factions = zombied,monolith	; название группировки
forbidden_npcs = none			; имя персонажа


;--------------------------------------
; Настройки модуля rx_reload
;--------------------------------------

[reload]
enabled = true				; включить
reload_one = false			; перезаряжать только текущее оружие
elapsed_percent = 75		; процент загруженности магазина, при котором перезарядка не требуется
clean_gun = 10				; чинить оружие при перезарядке на % состояния



