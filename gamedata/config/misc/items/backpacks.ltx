[backpack_base]:inventory_item_object
class                   = II_BACKP
visual                  = equipments\item_rukzak.ogf

inv_name                = BackpackBase
inv_name_short          = BackpackBaseShort
description             = BackpackBaseDescr

inv_weight              = 1.0
inv_volume              = 1.0
; Karlan: объем (вместимость) рюкзака
volume                  = 30
; Karlan: увеличение износа рюкзака когда мы пихаем в него сверх нормы, тут за тыс€чу подн€тий рветс€
condition_take_dec      = 0.001 ; прочность
; Karlan: порог изношенности, при котором рветс€ рюкзак
condition_bag_broken    = 0.9;0.001 ; надежность
; Karlan: удобность рюкзака (0 .. 1) def = 1.0f, но не рекомендуетс€ ставить выше 0.98f (при 1.0f = 0.975f)
convenience             = 1
physic_enable = true

inv_grid_width          = 2
inv_grid_height         = 2
inv_grid_x              = 10
inv_grid_y              = 29
cost                    = 300

immunities_sect         = backpack_base_immunities

slot                    = 16
script_binding          = m_inventory.bind_backpack

drop_backpack_snd       = interface\inv_drop_backpack

[backpack_base_immunities]
burn_immunity           = 0.005
strike_immunity         = 0.005
shock_immunity          = 0.005
wound_immunity          = 0.05
wound_2_immunity        = 0.05
radiation_immunity      = 0.0
telepatic_immunity      = 0.0
chemical_burn_immunity  = 0.01
explosion_immunity      = 0.0
fire_wound_immunity     = 0.0

